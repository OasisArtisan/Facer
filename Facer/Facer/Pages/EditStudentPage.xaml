<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Facer.Pages.EditStudentPage">
    <StackLayout>
        <Label Text="ID (Must be unique):"/>
        <Entry x:Name="IDEntry" Keyboard="Numeric"/>
        <Label x:Name="IDEntryFeedback" Text="ID Is not unique !" IsVisible="False"/>
        <Label Text="First Name:"/>
        <Entry x:Name="FirstNameEntry"/>
        <Label Text="Last Name:"/>
        <Entry x:Name="LastNameEntry"/>
        <Button x:Name="TakePictureButton" Text="Take Picture"/>
        <StackLayout x:Name="ImageArea" Orientation="Horizontal" VerticalOptions="FillAndExpand"></StackLayout>
        <Button x:Name="SaveButton" Text="Save"/>
        <Button x:Name="CancelButton" Text="Cancel"/>
    </StackLayout>
</ContentPage>